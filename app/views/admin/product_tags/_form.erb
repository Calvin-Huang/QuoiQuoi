<%= form_for([:admin, @product_tag], html: { class: 'form validate-form' }) do |f| %>
  <div class="col-sm-12">
    <div class="form-group">
      <%= f.fields_for :product_tag_translates do |builder| %>
        <%= builder.label :name, "商品標籤#{@product_tag.product_tag_translates[builder.index].locale.name}名稱" %>
        <div class="controls">
          <%= builder.text_field :name, class: 'form-control', placeholder: "請輸入商品標籤#{@product_tag.product_tag_translates[builder.index].locale.name}名稱", data: { 'rule-required' => true } %>
        </div>
        <%= builder.hidden_field :locale_id %>
      <% end %>
    </div>
    <div class="row form-actions">
      <div class="col-sm-12">
        <div class="pull-right">
          <%= link_to admin_product_tags_path, class: 'btn btn-default btn-lg' do %>
            取消
          <% end %>
          <%= f.button class: 'btn btn-primary btn-lg' do %>
            <i class="icon-save"></i>
            儲存
          <% end %>
        </div>
      </div>
    </div>
  </div>
<% end %>