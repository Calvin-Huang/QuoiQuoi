<%= render 'layouts/breadcrumbs' %>
<div class="container main-container">
  <%= render 'layouts/flash_message' %>
  <div class="row">
    <div class="col-md-8 col-sm-6  col-xs-12">
      <div class="box collapse-in-mobile">
        <h4 class="box-collapse">
          <a class="pull-right">
            <i class="fa fa-angle-down fa-lg hidden-lg hidden-md hidden-sm"></i>
          </a>
          <%= t('user_gift.information') %>
        </h4>
        <div class="box-content">
          <%= render 'gift_card_information', gift: @user_gift.gift %>
        </div>
      </div>
    </div>

    <div class="col-sm-4 col-sm-6 col-xs-12">
      <div class="box">
        <h4><%= t('check_out') %></h4>
        <div class="box-content">
          <div class="row margin-bottom-10">
            <div class="col-xs-12">
              <span class="text-muted">
                <%= t('quantity') %>
              </span>
            </div>
            <div class="col-xs-12">
              <strong>
                <%= @user_gift.quantity %>
              </strong>
            </div>
          </div>

          <div class="row margin-bottom-10">
            <div class="col-xs-12">
              <span class="text-muted">
                <%= t('amount') %>
              </span>
            </div>
            <div class="col-xs-12">
              <strong>
                <%= number_to_currency(@user_gift.gift.gift_translate.quota * @user_gift.quantity.to_f) %>
              </strong>
            </div>
          </div>
        </div>
      </div>

      <div class="box">
        <h4><%= t('choose_payment') %></h4>
        <!-- choose payment method -->
        <%= render 'payment_methods', user_gift: @user_gift %>
        <!-- choose payment method -->
      </div>
    </div>
  </div>
</div>